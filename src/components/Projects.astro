---
// Projects component
---

<section id="projects" class="container mx-auto px-4 py-16">
  <h2 class="text-4xl font-bold text-center mb-16 relative inline-block">
    Projects
    <span class="absolute bottom-0 left-0 w-12 h-1 bg-gradient-to-r from-accent-primary to-accent-secondary rounded transition-all duration-300 group-hover:w-full"></span>
  </h2>
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <article class="bg-gradient-to-br from-card-bg/80 to-card-bg/70 backdrop-blur-lg border border-border-color rounded-xl overflow-hidden transition-all duration-300 hover:transform hover:-translate-y-2 hover:shadow-xl group">
      <div class="p-6">
        <div class="flex justify-between items-start mb-4">
          <h3 class="text-text-primary text-xl font-bold">StormSS</h3>
          <div class="flex gap-2">
            <a href="https://stormss.cc" target="_blank" rel="noopener noreferrer" class="text-accent-primary hover:text-accent-secondary transition-colors duration-200" aria-label="Visit live project">
              <i class="fas fa-external-link-alt"></i>
            </a>
            <a href="https://github.com/stormss" target="_blank" rel="noopener noreferrer" class="text-accent-primary hover:text-accent-secondary transition-colors duration-200" aria-label="View on GitHub">
              <i class="fab fa-github"></i>
            </a>
          </div>
        </div>
</section> 